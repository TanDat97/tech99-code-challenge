{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["es2021"],
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@configs": [
        "configs"
      ],
      "@core": [
        "core"
      ],
      "@core/*": [
        "core/*"
      ],
      "@database": [
        "database"
      ],
      "@helpers": [
        "helpers"
      ],
      "@libraries": [
        "libraries"
      ],
      "@libraries/*": [
        "libraries/*"
      ],
      "@middlewares": [
        "middlewares"
      ],
      "@utils": [
        "utils"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist/*",
    "test",
    "**/*spec.ts"
  ]
}